{
	"name": "Jira Redirect",
	"description": "Redirects Jira issue URLs to oldIssueView.",
	"version": "1.1",

	"permissions": [
		"declarativeNetRequestWithHostAccess"
	],
	"host_permissions": [
		"https://*.atlassian.net/*",
		"https://*.jira.com/*"
	],

	"declarative_net_request" : {
		"rule_resources" : [
			{
				"id": "ruleset_1",
				"enabled": true,
				"path": "net_rules.json"
			}
		]
	},

	"icons": {
		"128": "images/128x128.png"
	},
	"manifest_version": 3
}
